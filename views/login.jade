html(lang="en", ng-app="IntervieweeApp")
  head
    include ./layout
  body(class="container-fluid")
    div(class="row", id="header")
      nav(class="navbar navbar-inverse navbar-fixed-top")
        div(class="navbar-header") 
          h3 Interviewee
    div(class="row", id="body")
      div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6")
      div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6")
        div#signupform
          form#signup(action="/signup", method="POST")
            div(class="input-group input-group")
              span(class="input-group-addon", id="sizing-addon1") 
                span(class="glyphicon glyphicon-user")
              input#username(type="text", name="username", class="form-control", placeholder="Username", aria-describedby="sizing-addon1")
            div(class="input-group input-group")
              span(class="input-group-addon", id="sizing-addon1") 
                span(class="glyphicon glyphicon-qrcode")
              input#password(type="password", name="password", class="form-control", placeholder="Password", aria-describedby="sizing-addon1")
            input(type="submit", value="Sign Up", class="btn btn-success btn-block")

        div#loginform
          form#login(action="/main", method="POST")
            div(class="input-group input-group")
              span(class="input-group-addon", id="sizing-addon1") 
                span(class="glyphicon glyphicon-user")
              input#username(type="text", name="username", class="form-control", placeholder="Username", aria-describedby="sizing-addon1")
            div(class="input-group input-group")
              span(class="input-group-addon", id="sizing-addon1") 
                span(class="glyphicon glyphicon-qrcode")
              input#password(type="password", name="password", class="form-control", placeholder="Password", aria-describedby="sizing-addon1")
            input(type="submit", value="Login", class="btn btn-info btn-block")

    div(class="row", id="footer")   
      nav(class="navbar navbar-inverse navbar-fixed-bottom")
        h4 Presented by 
          a Xuchang Chen
