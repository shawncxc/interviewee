html(lang="en", ng-app="IntervieweeApp")
  head
    include ./layout
    script(src="LoginInteractivity.js")
  body(class="container-fluid" style="background-image: url('bgpic.gif'); background-size: cover;")
    div(class="row", id="header")
      nav(class="navbar navbar-custom navbar-fixed-top")
        div(class="navbar-header") 
          h1 
            b Interviewee
        div(class="navbar-right")
          button#loginBtn(class="btn btn-default raised") Login  
          button#signupBtn(class="btn btn-success raised") Sign Up
    div(class="row", id="body")
      div(class="col-xs-4 col-sm-4 col-md-4 col-lg-4")
      div(class="col-xs-4 col-sm-4 col-md-4 col-lg-4")
        div#headup
          p
            span(class="glyphicon glyphicon-console")
            | Record. 
            span(class="glyphicon glyphicon-ok", style="color: #76FF03;")
          p
            span(class="glyphicon glyphicon-console")
            | Manage.
            span(class="glyphicon glyphicon-ok", style="color: #76FF03;")
          p
            span(class="glyphicon glyphicon-console")
            | Feedback.
            span(class="glyphicon glyphicon-ok", style="color: #76FF03;")
          p(style="text-align: center; color: #FF3D00; text-decoration: underline;") Your Interviews
